<SOUI name="mainWindow" title="@string/title" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" width="680" height="370"  margin="20,5,5,5"  resizable="1" appWnd="1" translucent="1" alpha="255">
  <root cache="1">
    <imgframe name="skin_bg_softmgr" src="img:IMG_BG_SOFTMGR" />
    <imgframe name="skin_bg_desktop" src="img:IMG_BG_DESKTOP" />
    <imgframe name="skin_bg_diagnoscan" src="img:IMG_BG_DIAGNOSCAN" />
    <imgframe name="skin_bg_guard" src="img:IMG_BG_GUARD" />
    <imgframe name="skin_bg_ucenter" src="img:IMG_BG_UCENTER" />

    <imageSwitcher name="vw_switch" pos="1,3,-1,-1"
                   images="img:IMG_BG_SOFTMGR|img:IMG_BG_DESKTOP|img:IMG_BG_DIAGNOSCAN|img:IMG_BG_GUARD|img:IMG_BG_UCENTER">
      <img pos="0,0,-0,-0" skin="skin_bg_light_level"/>
      <caption pos="0,0,-0,30">
        <imgbtn name="btn_close" skin="_skin.sys.btn.close"    pos="-40,2" tip="close" animate="1"/>
      </caption>

      <toolbox name="btn_desktop" skin="skin_bg_toolbox" icon="skin_ico_desktop" text="360安全桌面" pos="8,-50" animate="1"></toolbox>
      <toolbox name="btn_ucenter" skin="skin_bg_toolbox" icon="skin_ico_ucenter" text="个人中心" pos="[90,-50" offset="-0.5,0" animate="1"></toolbox>
      <toolbox name="btn_guard" skin="skin_bg_toolbox" icon="skin_ico_guard" text="木马防火墙" pos="[90,-50" offset="-0.5,0" animate="1"></toolbox>
      <toolbox name="btn_diagnosescan" skin="skin_bg_toolbox" icon="skin_ico_diagnosescan" text="电脑门诊" pos="[90,-50" offset="-0.5,0" animate="1"></toolbox>
    </imageSwitcher>

  </root>
</SOUI>
